.row
  .col-md-12
    h3 Search photos around any location
    .row
      .col-sm-8
        #panel
          .input-group
            input#address.form-control placeholder="Enter a Address" type="text"
            span.input-group-btn
              button.btn.btn-default onclick="getLatLngByAddress()" type="button"
                i.fa.fa-search

        #map-canvas.map
      .col-sm-4
        .search-box
          = form_tag '/',method: 'get', remote: true, class: 'form-horizontal', id: "searchForm" do
            .form-group
              label.col-sm-4.control-label Radius (Km):
              .col-sm-8
                = text_field_tag :radius, '', placeholder: 'Please type radius in here', class: 'form-control'
            .form-group
              label.col-sm-4.control-label Latitude:
              .col-sm-8
                = text_field_tag :lat, '', placeholder: 'Latitude', class: 'form-control', id: 'latitude'
            .form-group
              label.col-sm-4.control-label Longitude:
              .col-sm-8
                = text_field_tag :lng, '', placeholder: 'Longitude', class: 'form-control', id: 'longitude'
            .form-group
              .col-sm-4
              .col-sm-8
                = submit_tag 'Find Photos' , class: 'btn pull-left'

    .result-box
      #instagram-result.row
        - if @instagrams.length > 0
          = render 'instagrams', :instagrams => @instagrams

